{
    "root": true,
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": 1,
        "indent": [ "warn", 2 ],
        "semi": [ "warn", "never" ],
        "quotes": [ "warn", "single" ]
    }
}
